<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Sunny Central</title>

    {{!-- fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&family=Mulish:wght@200;300;400;700&family=Quicksand:wght@300;400;700&display=swap" rel="stylesheet">

    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  </head>
  <body>

    {{!-- sidebar & hamburger menu --}}
    {{#if user}}
      <nav class="navbar navbar-expand-xl navbar-light">
        <div class="container">

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fa-solid fa-bars"></i>
          </button>

          <a class="d-none d-xl-block navbar-brand" href="/profile">
            <span class="role-badge">{{user.role_name}}</span>{{user.username}}
          </a>
          
          <div class="order-xl-last">
            {{!-- <a href="/users/profile" class="navbar-profile">
              <span class="role-badge">{{user.role_name}}</span>{{user.username}}
            </a> --}}
            <a href="/logout" class=" navbar-btn">
              <i class="fa-solid fa-arrow-right-from-bracket me-2 me-md-3"></i>Log out
            </a>
          </div>
          
          <div class="mr-auto collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav d-block d-xl-none">

              <div class="mt-5 mb-4">
                <a class="navbar-brand" href="/profile">
                  <span class="role-badge">{{user.role_name}}</span>{{user.username}}
                </a>
              </div>

              <a class="nav-link" href="/dashboard">Dashboard</a>
              <a class="nav-link" href="/products">Products</a>
              {{#if admin}}
              <a class="nav-link" href="/employees">Employees</a>
              {{/if}}
              <a class="nav-link" href="/users">Customers</a>
              <a class="nav-link" href="/orders">Orders</a>
              <a class="nav-link" href="/enquiries">Enquiries</a>
            </div>
          </div>
          
          {{!-- <div class="ml-auto">
            <a href="/logout" class=" navbar-btn">
              <i class="fa-solid fa-arrow-right-from-bracket me-2 me-md-3"></i>Log out
            </a>
          </div> --}}

        </div>
      </nav>

      <nav class="d-none d-xl-flex h-100 position-fixed top-0 start-0 dashboard-sidebar">
        <div class="d-flex flex-column text-center">
          <a href="/dashboard" class="p-2 my-2">
            <img src="/images/dashboard-white.svg" alt="">
            Dashboard
          </a>
          <a href="/products" class="p-2 my-2">
            <img src="/images/sunscreen-white.svg" alt="">
            Products
          </a>
          {{#if admin}}
          <a href="/employees" class="p-2 my-2">
            <img src="/images/employee-white.svg" alt="">
            Employees
          </a>
          {{/if}}
          <a href="/users" class="p-2 my-2">
            <img src="/images/customers-white.svg" alt="">
            Customers
          </a>
          <a href="/orders" class="p-2 my-2">
            <img src="/images/orders-white.svg" alt="">
            Orders
          </a>
          <a href="/enquiries" class="p-2 my-2">
            <img src="/images/enquiries-white.svg" alt="">
            Enquiries
          </a>
        </div>
      </nav>

    {{/if}}

    {{#if success_messages }}
      <div class="container pt-5" style="position:relative;z-index:10"> 
          {{#each success_messages}}
            <div class="alert alert-success">
              {{this}}
            </div>
          {{/each}}     
      </div>   
    {{/if}}

    {{#if error_messages}}
      <div class="container pt-5" style="position:relative;z-index:10"> 
        {{#each error_messages}}
          <div class="alert alert-danger">
            {{this}}
          </div>
        {{/each}}
      </div>
    {{/if}}

    <div class="position-fixed top-0 w-100">
      {{#block 'login'}}{{/block}}
    </div>
    
    <div class="container pt-4 pt-lg-5"> 

      {{#block 'content'}}{{/block}}

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    {{#block "js"}}
    {{/block}}
    
  </body>
</html>