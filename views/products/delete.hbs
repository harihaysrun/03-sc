{{#extends 'base'}}

{{#block 'content'}}

    <h1 class="text-danger">Deleting {{product.name}}</h1>

    <form method="POST" class="mt-3">
        <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
        <p>
            Are you sure you want to delete this product?
            <br>This action is irreversible.
        </p>
        <p class="mt-4">
            <input type="submit" value="Yes" class="btn btn-danger mb-3 mb-md-0"/ >
            <a href="/products" class="btn btn-cancel mx-md-3">No</a>
        </p>
    </form>


{{/block}}

{{/extends}}